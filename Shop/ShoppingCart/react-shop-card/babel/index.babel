class ShopCard extends React.Component {
  constructor () {
    super();
     this.state = {
      toggle: 'raspberry',
      color: '#e950b6',
      txt: 'Raspberry donut',
      showModal: false
    };
    this.handleClick = this.handleClick.bind(this);
    this.thxMessage = this.thxMessage.bind(this);
  }
  
  changeColor(color, txt) {  
    var changeColor = document.getElementById("suger");
    changeColor.style.fill= color;
    this.setState({
      color,
      txt
    })
  }
  
  handleClick = (e) => {
    const changeToggle = e.target.id === 'raspberry' ? 'chocolate' : 'raspberry';
    const color = changeToggle === 'raspberry' ? '#3c2c31' : '#e950b6';
    const txt = changeToggle === 'raspberry' ? 'Chocolate donut' : 'Raspberry donut';
    this.changeColor(color, txt);
    this.setState({
      toggle: changeToggle,
    })
  }
  
  thxMessage = () =>{
    this.setState({showModal: true});
    setTimeout(() =>{
      this.setState({showModal: false});
    }, 3000);
  }
  
  render() {
    const {toggle, color, txt, showModal}=this.state;
    const styles = {
      fill: color,
    };
    return (
      <div className="card"> 
        <h1>{txt}</h1>
        <div className="img">{Donut}</div>
        <div className="shadow"></div>
        <div className="colors">
          <div id="raspberry" className="taste" onClick={this.handleClick}>
            <div className="color pink"></div>Raspberry</div>
          <div id="chocolate" className="taste" onClick={this.handleClick}>
            <div className="color brown"></div>Chocolate</div>
        </div>
        <div className="price">$5.<sup>99</sup></div>
        <button onClick={this.thxMessage}>Buy Now</button>
       {showModal             
          ? <div className="modal">Thank you!<br/>‚ù§</div> 
          : '' }
      </div>
    )
  }
}

ReactDOM.render(
